<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--AOPCtx2
    1.before
    2.around (대상 메소드 수행 전)
    3.대상 메소드
    4.after-returning
    5.after(finally)
    6.around (대상 메소드 수행 후)
-->
    <bean class="day04.AOP5.CalcImpl" id="calc"/>
    <bean class="day04.AOP5.LogPrintBeforeAdvice" id="logPrintBeforeAdvice"/>
    <bean class="day04.AOP5.LogPrintAfterAdvice" id="logPrintAfterAdvice"/>
    <bean class="org.springframework.aop.framework.ProxyFactoryBean" id="proxy">
        <property name="proxyInterfaces">
            <list><value>day04.AOP5.ICalc</value></list>   <!-- 인터페이스-->
        </property>

        <property name="target" ref="calc"/>
        <property name="interceptorNames">   <!-- 보조관심사-->
            <list>
<!--                여러개의 보조 관심사 적용 가능하며 동시에 적용이 가능-->
<!--                 <value>logPrintBeforeAdvice</value>  &lt;!&ndash; 핸들러 ID값 &ndash;&gt;-->
                <value>logPrintAfterAdvice</value>
            </list>
        </property>
    </bean>

</beans>